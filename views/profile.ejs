<%-include('header')%>
<section class="container container-rg"><!-- formularios em geral -->  	
    <div class="card">
     <div class="card-header">
      <h3 class="form-text" id='rg' style="text-align: center;">Atualização de cadastro</h3><br />	
     </div>
        <div class="card-body bg-light text-center" >                                     
        <form action="<%=`/putprofile/${dados.id}/?_method=PUT`%>" method="POST" enctype="multipart/form-data">
            <fieldset class="panel panel-group">            
                <div id="panel" class="panel panel-default no-padding">    
                <div class="panel-body">
                    <div class="form-group">
                        <div class="form-group row">   
                            <label for="nomeatl" class="col-sm-2 col-form-label"> Nome Completo: </label>                 
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="nomeatl" name="nomeatl" size="40" placeholder="<%=dados.nome%>">
                            </div>
                        </div>
        
                        <div class="form-group row">   
                            <label for="emailuser" class="col-sm-2 col-form-label">Email: </label>                 
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="emailatl" name="emailatl" size="40" placeholder="<%=dados.email%>">
                            </div>
                        </div>
        
                        <div class="form-group row">   
                            <label for="usernameatl" class="col-sm-2 col-form-label">Username: </label>                 
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="usernameatl" name="usernameatl" size="40" placeholder="<%=dados.user%>">
                            </div>
                        </div>
        
                        <div class="form-group row">
                            <label for="atlimg" class="col-sm-2 col-form-label">Imagem de perfil: </label>                 
                            <div class="custom-file col-sm-4">
                                <input type="file" class="custom-file-input" name="imgperfil" id="img" lang="pt-br">
                                <label class="custom-file-label" for="imgperfil">Envie uma nova imagem</label>        
                            </div>
                        </div>   
                    </div>                            
                    
                    <div>
                        <button type="submit" name="update" class="btn btn-success">Atualizar Dados</button>
                    </div>
                </div>
                </div>
            </fieldset>
        </form>
        </div>
    </div>		
</section>
<%-include('footer')%>
</div>
